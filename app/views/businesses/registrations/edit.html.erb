<div class="container bus_edit_page">
  <h2 class="text-center"> Update <%= resource_name.to_s.humanize %> Information</h2>
  <br>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.text_field :email, autofocus: true %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :Business_Name %><br />
          <%= f.text_field :name, autofocus: false %>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-md-12">
        <div class="field">
          <%= f.label :address_1 %><br />
          <%= f.text_field :address_1, autofocus: false %>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      <div class="col-md-4">
        <div class="field">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, autofocus: false %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
    </div>

    <br>
    
    <div class="row">
      <div class="col-md-6">
        <div class="field">
          <%= f.label :password %> <small>(leave blank if you don't want to change it)</small>
          <%= f.password_field :password, autocomplete: "on" %>
          <% if @minimum_password_length %>
            <br />
            <small><%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="field">
          <%= f.label :password_confirmation %> <small>(leave blank if you don't want to change it)</small>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
    </div>

    <br>

    <div class="row">
      

      <div class="col-md-6">
        <div class="field">
          <%= f.label :current_password %><small>(we need your current password to confirm your changes)</small>
          <%= f.password_field :current_password%>
        </div>
      </div>
    </div>

    <br>
    <br>
    <br>
    <br>
    <div class="row">
        <div class="col-md-4">
          <div>
            <%= f.file_field :business_image  %>
          </div>
        </div>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Update", class: 'btn btn-info' %>
    </div>
  <% end %>

  <br>
  <br>
  <br>

  <h5>Cancel my account</h5>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <%= link_to "Back", :back %>


</div>

