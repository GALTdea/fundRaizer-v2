        </div>
        <div class="col-md-6">
          <%= form_for(Waitlist.new, :url => waitlists_path) do |f| %>
                <div class="form-inline"> 
                  <%= f.email_field :email, type:"email" , class:"form-control form-control-lg frm-cust", placeholder:"EMAIL ADDRESS" %> 
