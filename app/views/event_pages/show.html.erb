  <%# provide(:title, @page.name) %> 
  <!-- Page Content -->
  <br>
  <br>
  <div class="container thinFont">
    <div class="row">
      <div class="col-lg-8 text-center">
        <!-- Event Content -->
        <h1  class="wrap "><%= @page.event_name %></h1>
        <h5 class="center">Category test: <%= @category %></h5>
        <hr class= "orange-br">
        <p class="lead center">Created by:<%= link_to @page.org.manager, class: "orange-link" %></p>
        <%= link_to @page.org.manager, class: "orange-link" %>
        <%#= link_to "Edit Event", edit_event_path(@event), class: "btn btn-primary", id: "show-edit-button" %>
        <div class="test200"></div>
        <!-- invited by should come next -->
        <p class="lead center"><b>Time:</b> <%#= @event.date.strftime("%I : %M %p") %><br><i class="fa fa-calendar"></i><b> Event Date: </b><%= @page.date_start.strftime("%F") %></p>
        <%# if @event.picture? %>
          <%#= image_tag @event.picture.url, class: "img-responsive", id: "event-show-image", alt: @event.picture %>
          <%= image_tag("event_image.png", :alt => "rss feed", class:"img-responsive", id: "event-show-image") %>
        <%# else %>
          <%#= image_tag "event-show-default.jpg", class: "img-responsive", alt: "default-image" %>       
        <%# end %><br><br>
                  
        <p class="lead wrap" mt-5>Event Description: <%= @page.about %></p><br>
        <% if current_org%>
          <p class="lead center" ><%= link_to "Edit Event", edit_event_path(@event), class: "btn btn-primary", id: "show-edit-button" %><%= link_to "Delete Event", @event, method: :delete, data: { confirm: "You sure?" }, class: "btn btn-primary" %></p>
        <% end %>
        <%# if @page.date > Time.now %>  
            <div id="attend_form" >
              <%# if current_user.attending?(@event) %>
                <%#= render "unattend" %>
              <%# else %>
                <%#= render "attend" %>
              <%# end %>
            </div>
          <%# else %>
            <p class="center">Event has ended</p>
            <div class="testDiv"></div>
          <%# end %>
        <%# else %>  
          <!-- <h4 class="lead center" >(Please <%#= link_to "Log In", login_path %> or  <%#= link_to "Sign Up", signup_path %> to attend and comment on this event)</h4> -->
        <%# end %><br>

        <!-- Attendees -->
        <% if @page.date_start > Time.now %> 
          <p class="lead center">People attending this event (<span id="attendees"><%#= @event.attendees.count %></span>)</p>
        <% else %>
          <p class="lead center" >People that attended this event (<span id="attendees"><%#= @event.attendees.count %></span>)</p> 
        <% end %>
        <hr>
        <div id="users_attending" >
          <%# @event.attendees.each do |user| %>
            <li style="text-align:center; list-style: none; font-size: 16px;">Name: <%#= link_to user.name, user %></li>
          <%# end %>
        </div>
        <hr id="separator">

        <!-- Comments -->
        <h3 class="center" id="comment_count">Comments (<%#= @event.comments.count %>)</h3>
        <hr>
        <div class="media comment_list" ">
          <%#= render @comments %>
        </div>
        <%# if current_user %>
          <div class="well">
            <h4>Leave a Comment:</h4>
            <%#= render 'comments/form' %>
          </div>
        <%# end %>
      </div>
      <!-- Event Sidebar -->
      <div class="col-md-4">
        <!-- Map -->
        <div class="well" id="event-sidebar">
          <p class="lead"><b>Location:</b> <%= @page.address %></p>
          <div id="map"></div>
        </div>
    
      </div>
    </div>
  </div>
