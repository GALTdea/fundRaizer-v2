<div class="container mt-5">
	<h1>Sponsors#index</h1>
	<% @sponsors.each do |f| %> 
		<%= f.company_name %> <br>
	<% end %>
</div> 


<div class="container">
    <div class="row">
      <!-- <div class="col-md-3 text-center" id="search-sidebar">
        <h4><b>Search by</b></h4>
      </div> -->
      <div class="col-md-9 text-center">
        <div class="row">
          <h3 id="events"><%#= params[:timeline] == "Past Events" ? "Past Events" : "Upcoming Events" %></h3>
          <div>(<%#= page_entries_info @events %>)</div>
          <hr>
          <%#= will_paginate %><br>
          <% if @sponsors.any? %>         
            <div class="col-sm-4 col-lg-4 col-md-4 " , style="cursor: pointer;">

            	<div class="thumbnail">
	                <%# if event.picture? %>
	                  <%#= image_tag event.picture.thumb.url, class: "img-responsive", id: "event-thumbnail", alt: event.picture %>
	                <%# else %>
	                <%= image_tag "event_image.png", alt: "default-image", id: "event-thumbnail" %>
                <%# end %>
                <div class="caption">
                  <h4 class="wrap"><%#= truncate f.company_name , length: 49 %> Starbucks</h4>
                  <p>Created by: <%#= link_to f.manager %> Jordan<br>
                  <%#= event.date.strftime("Date: %a, %b %d %Y") %><br>
                  <%#= event.date.strftime("Time: %I : %M %p") %><br>
                  <!-- Category: </a></p> -->

                </div>
                <div class="attendees">
                  <%# if event.date > Time.now %>
                    <p><%#= pluralize(event.attendees.count, 'person') %> attending</p>
                  <%# else %>
                      <p><%#= pluralize(event.attendees.count, 'person') %> attended</p>
                  <%# end %>
                </div>
              </div>
            </div>

            
          <% end %>
          <div class="col-md-12 text-center">
            <div class="row">
              <%#= will_paginate %>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>